<% provide(:title, 'Settings') %>

<div class="settingsContainer">

<div class="settings">

    <div class="settingsMenu">

        <div class="settingsmenuOption"><div class="menuText">Account Summary</div></div>
        <div class="settingsmenuOption"><div class="menuText">Personal Settings</div></div>
        <div class="settingsmenuOption active"><div class="menuText active">Change Settings</div></div>
        <div class="settingsmenuOption"><div class="menuText">Upgrade Account</div></div>
    </div>

    <div class="settingsContent">
    
    <h1>Account Summary</h1>
    
    <%= form_for @user, :html => { :multipart => true } do |f| %>

    <%= render 'shared/error_messages' %>
    
    <div class="line"></div>
    
    <div class="settingTitle"><b>Name</b></div>
    
    <div class="settingformItem">
    
    <%= f.text_field :name %>
    
    </div>
    
    <div class="line"></div>
    
    <div class="settingTitle"><b>Email</b></div>
    
    <div class="settingformItem">
    
    <%= f.text_field :email %>
    
    </div>
    
    <div class="line"></div>
    
    <div class="settingTitle"><b>Password</b></div>
    
    <div class="settingformItem">
    
    <%= f.password_field :password %>
    
    </div>
    
    <div class="line"></div>
    
    <div class="settingTitle"><b>Password Confirmation</b></div>
    
    <div class="settingformItem">
    
    <%= f.password_field :password_confirmation %>
    
    </div>

    <div class="line"></div>
    
    <div class="settingTitle"><b></b></div>
    
    <div class="settingformItem">
    
    <%= f.submit "Save changes", class: "" %>
    
    </div>
        
    </div>

    </div>

</div>

      

    
    <% end %>
